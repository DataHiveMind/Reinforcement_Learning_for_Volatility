{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Python: Train PPO Microstructure",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/training/train.py",
      "console": "integratedTerminal",
      "args": [
        "--config",
        "configs/trainings/ppo_mircostructure.yaml",
        "--env-config",
        "configs/env/volatility_env.yaml"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "justMyCode": false
    },
    {
      "name": "Python: Train DDPG Microstructure",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/training/train.py",
      "console": "integratedTerminal",
      "args": [
        "--config",
        "configs/trainings/ddpg_microstructure.yaml",
        "--env-config",
        "configs/env/volatility_env.yaml"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "justMyCode": false
    },
    {
      "name": "Python: Evaluate Model",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/training/evaluate.py",
      "console": "integratedTerminal",
      "args": [
        "--model-path",
        "experiments/ppo_microstructure/best_model/",
        "--env-config",
        "configs/env/volatility_env.yaml",
        "--n-episodes",
        "10"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "justMyCode": false
    },
    {
      "name": "Python: Backtest",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/training/backtest.py",
      "console": "integratedTerminal",
      "args": [
        "--model-path",
        "experiments/ppo_microstructure/best_model/",
        "--env-config",
        "configs/env/volatility_env.yaml",
        "--start-date",
        "2023-07-01",
        "--end-date",
        "2024-12-31"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "justMyCode": false
    },
    {
      "name": "Python: Feature Engineering",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/data/feature_engineering.py",
      "console": "integratedTerminal",
      "args": [
        "--config",
        "configs/data/mircostructure_features.yaml",
        "--output",
        "data/processed/"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "justMyCode": false
    },
    {
      "name": "Python: Test Environment",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/tests/test_envs.py",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "justMyCode": false
    },
    {
      "name": "Python: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "console": "integratedTerminal",
      "args": [
        "${workspaceFolder}/tests",
        "-v",
        "--tb=short",
        "--log-cli-level=DEBUG"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "justMyCode": false
    },
    {
      "name": "Python: Debug Current Test File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "console": "integratedTerminal",
      "args": [
        "${file}",
        "-v",
        "--tb=short",
        "--log-cli-level=DEBUG"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "justMyCode": false
    },
    {
      "name": "Python: Attach to Process",
      "type": "debugpy",
      "request": "attach",
      "processId": "${command:pickProcess}",
      "justMyCode": false
    },
    {
      "name": "Python: MLflow UI",
      "type": "debugpy",
      "request": "launch",
      "module": "mlflow",
      "console": "integratedTerminal",
      "args": [
        "ui",
        "--backend-store-uri",
        "sqlite:///mlflow.db",
        "--default-artifact-root",
        "./mlruns",
        "--host",
        "0.0.0.0",
        "--port",
        "5000"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Python: TensorBoard",
      "type": "debugpy",
      "request": "launch",
      "module": "tensorboard",
      "console": "integratedTerminal",
      "args": [
        "--logdir",
        "experiments/",
        "--port",
        "6006",
        "--bind_all"
      ]
    }
  ]
}
